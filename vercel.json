{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/../backend/server.js" 
    }
  ],
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html", 
      "use": "@vercel/static-build"
    }
  ],
  "installCommand": "npm install --prefix backend && npm install", 
  "buildCommand": "npm run build"
}